{% extends 'base.html.twig' %}

{% block title %}List of products{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h2>List of products</h2>

    <table class="table table-stripped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Description</td>
                <td>Price</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td><a href="{{ path('product.show', {id: product.id}) }}">{{ product.name }}</a></td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td><a class="text-danger" href="{{ path('product.delete', {id: product.id}) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <hr />
    <div class="float-right"><a href="{{ path('product.create') }}">Add new product</a></div>
{% endblock %}
